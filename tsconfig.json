{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "lib": ["es2017"],
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "./typings.d.ts"]
  },
  "include": ["./src/**/*", "typings.d.ts"],
  "exclude": ["node_modules", "dist", "catalog"]
}
